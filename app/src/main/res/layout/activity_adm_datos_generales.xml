<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".adm.manejarEmpresa.admDatosGenerales">

    <ImageView
        android:id="@+id/flechaRetroceder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_flecha" />

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="269dp"
        android:layout_height="26dp"
        android:layout_marginTop="20dp"
        android:text="Datos Generales"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toEndOf="@+id/flechaRetroceder"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="372dp"
        android:layout_height="472dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/removeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo"
        app:layout_constraintVertical_bias="0.528">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:layout_margin="2dp"
            android:padding="2dp">

            <TableRow
                android:background="#FFFFFF"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textColor="#000000"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/nombreEmpresaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre de la Empresa"
                    android:textColor="#000000"
                    android:padding="5dp"/>
            </TableRow>

            <TableRow
                android:background="#FFFFFF"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección"
                    android:textColor="#000000"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/direccionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No disponible"
                    android:textColor="#000000"
                    android:padding="5dp"/>
            </TableRow>

            <TableRow
                android:background="#FFFFFF"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teléfono"
                    android:textColor="#000000"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/telefonoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No disponible"
                    android:textColor="#000000"
                    android:padding="5dp"/>
            </TableRow>


            <TableRow
                android:background="#FFFFFF"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo Electrónico"
                    android:textColor="#000000"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/correoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No disponible"
                    android:textColor="#000000"
                    android:padding="5dp"/>
            </TableRow>

            <TableRow
                android:background="#FFFFFF"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Fundación"
                    android:textColor="#000000"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/fechaFundacionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023-01-01"
                    android:textColor="#000000"
                    android:padding="5dp"/>
            </TableRow>

            <TableRow
                android:background="#FFFFFF"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sitio Web"
                    android:textColor="#000000"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/sitioWebTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No disponible"
                    android:textColor="#000000"
                    android:padding="5dp"/>
            </TableRow>
            <TableRow
                android:background="#FFFFFF"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eslogan"
                    android:textColor="#000000"
                    android:padding="5dp"/>
                <TextView
                    android:id="@+id/esloganTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No disponible"
                    android:textColor="#000000"
                    android:padding="5dp"/>
            </TableRow>

            <TableRow
                android:background="#FFFFFF"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logo"
                    android:textColor="#000000"
                    android:padding="5dp"/>
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </TableRow>

        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/removeLayout"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_gravity="end"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2196F3"
            android:gravity="center"
            android:text="Editar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
